#include <stdio.h>

int main()
{
    int liczba_startowa;
    int licznik;
    int sumator=0;
    printf("Podaj liczbe naturalna z przedzialu od 3 do 100\n");
    scanf("%d",&liczba_startowa);
   // printf("%d", liczba_startowa);
   printf("Liczby naturalne mniejsze niz podana to: ");
   for(licznik=0;licznik<liczba_startowa-1;licznik+=1) {
       printf("%d, ",licznik);
       sumator=sumator+licznik;
   }
   printf("%d.\n",liczba_startowa-1);
   printf("Suma tego ciagu to %d.",sumator);
    return 0;
}
